<div class="logo-login-image middle-item"><%= image_tag "logo_large.png" %></div>

<%= form_tag '/login' do %>
  <%= text_field_tag :email, nil, placeholder: "Email" %>
  <%= password_field_tag :password, nil, placeholder: "Password"%>
  <%= submit_tag "Sign In", class: "submit" %>
<% end %>


<div><%= link_to "Facebook", "/auth/facebook", id: "sign_in", rel: :external %></div>

<p class="sign-up">DONT HAVE AN ACCOUNT? <%= link_to "SIGN UP", new_user_path %></p>
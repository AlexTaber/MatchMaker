<div class="logo-login-image middle-item"><%= image_tag "logo_large.png" %></div>

<%= form_tag '/login' do %>
  <%= text_field_tag :email, nil, placeholder: "Email" %>
  <%= password_field_tag :password, nil, placeholder: "Password"%>
  <%= submit_tag "Submit", class: "submit" %>
<% end %>

<div class="signup"><%= link_to "Sign Up!", new_user_path %></div>
<div class="signup"><%= link_to "Facebook Sign In", "/auth/facebook", id: "sign_in", rel: :external %></div>